<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

    <link rel='stylesheet' href='/stylesheets/displaystyle.css' />
  </head>
    <div class="maincontainer">
      <div class="box">


        <div class="headingdiv">

          <div class="left-heading">
            <div><img src="/images/logo.png" class="image" ></div>
            <div class="heading">All Show</div> 
          </div>

          <div>
            <a href="/movie/listyourshow">
              <button class="btn btn-primary" value="button">
                <span style="font-size:18px;">&oplus;</span> Add New Show
              </button>
            </a>
          </div>

        </div>

          <%if(data.length==0){%>
          <%=message%>
          <%}else{%>
          
        <div>    
          <table class="table table-striped-columns">  
            <tr>
              <th>#</th>
              <th width="13%">[Movie Id] <br> Movie Name</th>
              <th width="10%">State</th>
              <th>City</th>
              <th>Cinema</th>
              <th width="12%">LOGO <br>Screen</th> 
              <th width="15%">Description</th>
              <th width="10%">Status</th>
              <th>Poster</th>
              <th colspan="2" " >Action</th>
            </tr>

          <%data.map((item,i)=>{%>
        <tr>
            <td><%=i+1%></td>
          <td>[<%=item.movieid%>]<br> <b><%=item.moviename%></b></td>
          <td><%=item.statename%></td>
          <td><%=item.cityname%></td>
          <td><b><%=item.cinemaname%></b></td>
          <td><img src="/images/<%=item.cinemalogo%>" width="35px"><br><%=item.screenname%></td>
          <td><%=item.description%></td>
          <td><%=item.status%></td>  
          <td>
            <img src="/images/<%=item.poster%>" class="mposter"><br>
            <a href="/movie/display_poster_for_edit?movieid=<%=item.movieid%>&moviename=<%=item.moviename%>&poster=<%=item.poster%>" class="editpic">Edit Poster</a>
          </td>
          <td>
            <a href="/movie/displayforedit?movieid=<%=item.movieid%>"><button class="btn btn-primary">Edit</button></a>
          </td>
          <td>
            <a href="/movie/delete_show?movieid=<%=item.movieid%>"><button class="btn btn-primary">Delete</button></a>
          </td>
        </tr> 
          <%})%>
          <%}%> 
          </table> 
        </div>  
      </div>
    </div>
</html>